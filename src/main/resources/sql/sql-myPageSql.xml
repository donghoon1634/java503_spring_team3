<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitc.fullstack503.java503_team3.mapper.MyPageMapper">

   <insert id="updateMyPage" parameterType="bitc.fullstack503.java503_team3.dto.userMyPageDTO">
       insert into user_mypage (user_mypage_board_idx, mypage_user, user_mypage_contents)
       values(#{userMyPageBoardIdx},#{myPageUser},#{userMyPageContents});
   </insert>

    <select id="selectMyPage" resultType="bitc.fullstack503.java503_team3.dto.userMyPageDTO">
        select  mypage_user, user_mypage_contents
        from user_mypage
        where mypage_user = #{myPageUser}
        order by user_mypage_idx desc;
    </select>
</mapper>